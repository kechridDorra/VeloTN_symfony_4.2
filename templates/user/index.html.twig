{% extends 'admin/baseAdmin.html.twig' %}

{% block body %}
    <br>
    <div class="container">
        <center><h1> Liste des Utilisateurs</h1></center>
        <br>

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date_nais</th>
                <th>Tel</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.datenaissance ? user.datenaissance|date('Y-m-d') : '' }}</td>
                    <td>{{ user.tel }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">Afiicher</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_register') }}">Ajouter utilisateur</a>
    </div>
    <br>
{% endblock %}
